{
  "name": "data-visualizer-pro",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "packages/@dv/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --coverage --watchAll=false --passWithNoTests",
    "deploy:bubble": "pnpm --filter @dv/bubble-plugin run build && echo \"Publica bubble-plugin-final/datavisualizerpro.js en Bubble\"",
    "deploy:backend": "pnpm --filter @dv/backend run build && echo \"Despliega backend/dist en tu servidor\"",
    "deploy": "pnpm run deploy:bubble && pnpm run deploy:backend",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write .",
    "generate:chart": "ts-node ./scripts/generate-chart.ts",
    "prepare": "husky install"
  },
  "dependencies": {
    "@tensorflow/tfjs": "^4.14.0",
    "echarts": "^5.4.0",
    "plotly.js-dist": "^2.23.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^10.1.5",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^13.0.2",
    "prettier": "^3.5.3",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
